{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/utils/*": ["./utils/*"]  // utils klasörü için alias ekleyin
    }
  },
  "exclude": ["node_modules", ".next"],
  "include": [
    "app/**/*",
    "components/**/*",
    "context/**/*",
    "hooks/**/*",
    "lib/**/*",
    "middleware.js",
    "utils/**/*"
  ]
}